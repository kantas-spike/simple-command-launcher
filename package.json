{
  "name": "simple-command-launcher",
  "displayName": "simple-command-launcher",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "simple-command-launcher.runCommand",
        "category": "Simple Command Launcher",
        "title": "Run"
      }
    ],
    "configuration": {
      "title": "Simple Command Launcher: run external command",
      "properties": {
        "simple-command-launcher.externalCommands": {
          "type": "array",
          "title": "External Commands",
          "items": {
            "type": "object",
            "title": "External Command",
            "properties": {
              "name": {
                "type": "string",
                "description": "Name of Command"
              },
              "path": {
                "type": "string",
                "description": "Path of Command"
              },
              "args": {
                "type": "array",
                "title": "args",
                "items": {
                  "type": "object",
                  "title": "arg",
                  "properties": {
                    "name": {
                      "type": "string",
                      "description": "Name of Arg"
                    },
                    "value": {
                      "type": "string",
                      "description": "Value of Arg"
                    },
                    "useInput": {
                      "type": "boolean",
                      "description": "whether to use user input",
                      "default": false
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/mocha": "^10.0.2",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "eslint": "^8.50.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2",
    "@vscode/test-electron": "^2.3.4"
  }
}
